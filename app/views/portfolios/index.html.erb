<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_portfolio_path %>

<% @portfolio_items.each do |item|%>
  <p><%= link_to item.title, portfolio_path(item) %></p>
  <p><%= item.subtitle %></p>
  <p><%= item.body %></p>
  <%#=  defensive coding, I'd rather use ' if item.thumb_image' %>
  <%= image_tag item.thumb_image unless item.thumb_image.nil? %>

  <%= link_to "Edit", edit_portfolio_path(item) %>
  <%= link_to 'Delete Portfolio Item', portfolio_path(item), method: :delete, data: { confirm: 'Are you sure?' } %>

<% end %>

